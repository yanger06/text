{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${workspaceFolder}/main.cpp",
        "-o",
        "${workspaceFolder}/main"
      ],
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Generated task by user."
    },
    {
      "type": "cppbuild",
      "label": "C/C++: gcc.exe 生成活动文件",
      "command": "D:\\mingw64\\bin\\gcc.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "调试器生成的任务。"
    },
    {
      "label": "build with Makefile",
      "type": "shell",
      "command": "make",
      "args": [],
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Build the project using Makefile."
    },
    {
      "label": "clean with Makefile",
      "type": "shell",
      "command": "make",
      "args": ["clean"],
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Clean the project using Makefile."
    }
  ]
}